{
    "extends": "@tsconfig/svelte/tsconfig.json",
    "compilerOptions": {
        "allowJs": true,
        "allowSyntheticDefaultImports": true,
        "baseUrl": ".",
        "declaration": true,
        "declarationDir": "lib",
        "sourceMap": true,
        "esModuleInterop": true,
        "inlineSourceMap": false,
        "module": "ES2015",
        "lib": ["esnext", "DOM"],
        "listEmittedFiles": false,
        "listFiles": false,
        "moduleResolution": "node",
        "pretty": true,
        "resolveJsonModule": true,
        "rootDir": "src",
        "skipLibCheck": true,
        "strict": true,
        "types": ["node", "svelte"]
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules/*"]
}
