{
    "parser": "@typescript-eslint/parser",
    "plugins": ["svelte3", "@typescript-eslint"],
    "overrides": [
        {
            "files": ["*.svelte"],
            "processor": "svelte3/svelte3"
        }
    ],
    "rules": {
        "max-len": [
            "error",
            {
                "code": 120,
                "ignoreComments": true
            }
        ]
    },
    "settings": {
        "svelte3/typescript": true
    }
}
